<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <title>{ifset title}{include title|striptags} | {/ifset} Database Applications</title>

    <link rel="stylesheet" href="{$basePath}/css/master.css">
    <link rel="shortcut icon" href="{$basePath}/favicon.ico">
    <meta name="viewport" content="width=device-width">
</head>

<body>

{if $user->isLoggedIn()}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <nav class="navbar navbar-default" id="navbar">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                data-target="#bs-example-navbar-collapse-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{link Homepage:default}">NDBI026</a>
                    </div>

                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                        <ul class="nav navbar-nav">
                            <li{ifCurrent Homepage:*} class="active"{/ifCurrent}{ifCurrent Admin:default} class="active"{/ifCurrent}><a href="{link Homepage:default}">Dashboard</a></li>
                            {if $user->isInRole('admin')}
                                <li{ifCurrent Admin:projects} class="active"{/ifCurrent}><a href="{link Admin:projects}">Projects</a></li>
                            {/if}
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{link Sign:out}"><i class="glyphicon glyphicon-log-out"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
{/if}

{if count($flashes) > 0}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            {foreach $flashes as $flash}
                <div class="flash alert alert-{$flash->type} alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">Ã—</span></button>
                    {$flash->message}
                </div>
            {/foreach}
        </div>
    </div>
</div>
{/if}

{include content}

<script src="{$basePath}/js/live-form-validation.js"></script>
<script src="{$basePath}/js/master.js"></script>
</body>
</html>
